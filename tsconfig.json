{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2017",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build/",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.ts.spec"]
}
